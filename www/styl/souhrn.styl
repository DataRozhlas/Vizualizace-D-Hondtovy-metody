.souhrn
  position relative
  .helptext
    position absolute
    font-size 1em
    color #777
    position absolute
    .triangle
      position absolute
      display block

    &.okrsky
      left 10px
      top 42px
      padding-left 18px
      .triangle
        top 5px
        left 0px
        triangle 10px, 6px, 'top', lighten(black, 60%)
    &.cela
      left 0px
      top 52px
      width 567px
      padding-right 16px
      text-align right
      .triangle
        bottom 6px
        right 0px
        triangle 10px, 6px, 'bottom', lighten(black, 60%)

  .container
    opacity 0.2
    &.active
      opacity 1

  .popisky
    float left
    clear left
    &.cela
      margin-top 2px
    span
      display block
      float left
      text-align center
      font-size 0.8em
      line-height 1.3em
  .popisky.okrsky span
      &:last-child
        width auto !important
        text-align right
        margin-left -16px
  .popisky.cela span
    &:nth-child(4)
      width auto !important
      text-align right
      margin-left -10px
    &:nth-child(5)
      padding-left 9px
    &:nth-child(6)
      padding-left 6px

  .mandaty
    float left
    clear left
    margin-top 1px
    &.cela
      margin-top 38px
    .mandat
      width 8px
      height 8px
      float left
      margin 0px 1px 0px 0px
